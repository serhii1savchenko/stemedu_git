<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>rebuild</actionName>
        <goals>
            <goal>clean</goal>
            <goal>compile</goal>
        </goals>
        <properties>
            <maven.test.skip>true</maven.test.skip>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-Build WAR with fonts</actionName>
        <displayName>Build WAR with fonts</displayName>
        <goals>
            <goal>clean</goal>
            <goal>package</goal>
        </goals>
        <properties>
            <maven.test.skip>true</maven.test.skip>
        </properties>
        <activatedProfiles>
            <activatedProfile>prod</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>build</actionName>
        <goals>
            <goal>compile</goal>
        </goals>
    </action>
    <action>
        <actionName>run</actionName>
        <goals>
            <goal>compile</goal>
            <goal>war:exploded</goal>
        </goals>
        <properties>
            <netbeans.deploy>true</netbeans.deploy>
            <maven.test.wkip>true</maven.test.wkip>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <goals>
            <goal>war:exploded</goal>
        </goals>
        <properties>
            <netbeans.deploy>true</netbeans.deploy>
            <netbeans.deploy.debugmode>true</netbeans.deploy.debugmode>
            <maven.test.skip>true</maven.test.skip>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <goals>
            <goal>package</goal>
        </goals>
        <properties>
            <netbeans.deploy>true</netbeans.deploy>
            <netbeans.deploy.profilemode>true</netbeans.deploy.profilemode>
            <maven.test.skip>true</maven.test.skip>
        </properties>
    </action>
    <action>
            <actionName>run.single.main</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
            </goals>
            <properties>
                <exec.classpathScope>${classPathScope}</exec.classpathScope>
                <exec.args>-Xmx512m -classpath %classpath ${packageClassName}</exec.args>
                <exec.executable>${java.home}/bin/java</exec.executable>
            </properties>
        </action>
    <action>
            <actionName>debug.single.main</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath ${packageClassName}</exec.args>
                <exec.executable>${java.home}/bin/java</exec.executable>
                <exec.classpathScope>${classPathScope}</exec.classpathScope>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
    
</actions>
